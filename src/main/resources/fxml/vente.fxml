<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sgpa.controller.VenteController"
      spacing="20" styleClass="vente-root" maxWidth="Infinity" maxHeight="Infinity">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="20">
        <!-- Panneau de gauche: Selection medicament -->
        <VBox spacing="15" HBox.hgrow="ALWAYS" styleClass="panel">
            <HBox alignment="CENTER" spacing="10">
                <FontIcon iconLiteral="fas-search" styleClass="panel-icon"/>
                <Label text="Rechercher un medicament" styleClass="panel-title"/>
            </HBox>

            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Nom du medicament..."
                           HBox.hgrow="ALWAYS" onKeyReleased="#handleSearch"/>
                <Button onAction="#handleSearch" styleClass="icon-button">
                    <graphic><FontIcon iconLiteral="fas-search"/></graphic>
                </Button>
            </HBox>

            <TableView fx:id="tableMedicaments" VBox.vgrow="ALWAYS" styleClass="medicament-table">
                <columns>
                    <TableColumn fx:id="colNom" text="Medicament" prefWidth="200"/>
                    <TableColumn fx:id="colPrincipe" text="Principe Actif" prefWidth="150"/>
                    <TableColumn fx:id="colPrix" text="Prix (EUR)" prefWidth="100"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="70"/>
                </columns>
                <placeholder>
                    <Label text="Recherchez un medicament"/>
                </placeholder>
            </TableView>

            <!-- Zone ajout au panier -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="add-to-cart">
                <Label text="Quantite:"/>
                <Spinner fx:id="spinnerQuantite" min="1" max="999" initialValue="1" editable="true" prefWidth="100"/>
                <Button fx:id="btnAjouter" text="Ajouter au panier" onAction="#handleAddToCart"
                        styleClass="action-button, primary" disable="true">
                    <graphic><FontIcon iconLiteral="fas-cart-plus"/></graphic>
                </Button>
            </HBox>
        </VBox>

        <!-- Panneau de droite: Panier -->
        <VBox spacing="15" HBox.hgrow="ALWAYS" styleClass="panel">
            <HBox alignment="CENTER" spacing="8">
                <Region HBox.hgrow="ALWAYS"/>
                <FontIcon iconLiteral="fas-shopping-cart" styleClass="panel-icon"/>
                <Label text="Panier" styleClass="panel-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnViderPanier" text="Vider" onAction="#handleClearCart"
                        styleClass="danger-button-small" disable="true">
                    <graphic><FontIcon iconLiteral="fas-trash"/></graphic>
                </Button>
            </HBox>

            <TableView fx:id="tablePanier" VBox.vgrow="ALWAYS" styleClass="panier-table">
                <columns>
                    <TableColumn fx:id="colPanierNom" text="Medicament" prefWidth="180"/>
                    <TableColumn fx:id="colPanierQte" text="Qte" prefWidth="50"/>
                    <TableColumn fx:id="colPanierPrix" text="Prix Unit." prefWidth="90"/>
                    <TableColumn fx:id="colPanierTotal" text="Total" prefWidth="95"/>
                    <TableColumn fx:id="colPanierAction" text="" prefWidth="50"/>
                </columns>
                <placeholder>
                    <Label text="Le panier est vide"/>
                </placeholder>
            </TableView>

            <!-- Zone total et validation -->
            <VBox spacing="10" styleClass="checkout-section">
                <Separator/>

                <HBox alignment="CENTER_LEFT">
                    <Label text="Nombre d'articles:" styleClass="checkout-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblNbArticles" text="0" styleClass="checkout-value"/>
                </HBox>

                <HBox alignment="CENTER_LEFT">
                    <Label text="TOTAL:" styleClass="checkout-label, total-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblTotal" text="0.00 EUR" styleClass="checkout-value, total-value"/>
                </HBox>

                <Separator/>

                <CheckBox fx:id="chkOrdonnance" text="Vente sur ordonnance"/>

                <HBox fx:id="ordonnanceBox" spacing="10" visible="false" managed="false">
                    <Label text="NÂ° Ordonnance:"/>
                    <TextField fx:id="txtNumeroOrdonnance" promptText="Numero de l'ordonnance" HBox.hgrow="ALWAYS"/>
                </HBox>

                <Button fx:id="btnValider" text="Valider la Vente" onAction="#handleValidateSale"
                        styleClass="action-button, success" maxWidth="Infinity" disable="true">
                    <graphic><FontIcon iconLiteral="fas-check-circle"/></graphic>
                </Button>

                <!-- Message FEFO -->
                <HBox alignment="CENTER" spacing="5" styleClass="fefo-info">
                    <FontIcon iconLiteral="fas-info-circle" styleClass="info-icon"/>
                    <Label text="Les lots sont automatiquement selectionnes par FEFO" styleClass="info-text"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>

</VBox>
